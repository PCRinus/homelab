---
# Buildarr secrets configuration
# Copy this file to buildarr-secrets.yml and fill in your API keys
# DO NOT commit buildarr-secrets.yml to git!

sonarr:
  instances:
    sonarr:
      api_key: "REPLACE_WITH_YOUR_SONARR_API_KEY"
      settings:
        download_clients:
          definitions:
            qBittorrent:
              password: "REPLACE_WITH_YOUR_QBITTORRENT_PASSWORD"

# Radarr configuration
radarr:
  instances:
    radarr:
      api_key: "REPLACE_WITH_YOUR_RADARR_API_KEY"
      settings:
        download_clients:
          definitions:
            qBittorrent:
              password: "REPLACE_WITH_YOUR_QBITTORRENT_PASSWORD"

prowlarr:
  instances:
    prowlarr:
      api_key: "REPLACE_WITH_YOUR_PROWLARR_API_KEY"
      settings:
        # Indexer secrets (passkeys, credentials, etc.)
        indexers:
          indexers:
            definitions:
              "FileList.io":
                secret_fields:
                  passkey: "REPLACE_WITH_YOUR_FILELIST_PASSKEY"
        # API keys for Prowlarr's connections to other *arr apps
        apps:
          applications:
            definitions:
              Sonarr:
                api_key: "REPLACE_WITH_YOUR_SONARR_API_KEY"
              Radarr:
                api_key: "REPLACE_WITH_YOUR_RADARR_API_KEY"
