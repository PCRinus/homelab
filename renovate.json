{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "on monday"
  ],
  "timezone": "UTC",
  "labels": [
    "dependencies"
  ],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Docker images",
      "automerge": false
    },
    {
      "matchDatasources": [
        "terraform-provider"
      ],
      "groupName": "Terraform providers",
      "automerge": false
    },
    {
      "matchDatasources": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": false
    }
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/.*/compose\\.yml$/",
      "/.*/compose\\.yaml$/"
    ]
  },
  "terraform": {
    "managerFilePatterns": [
      "/\\.tf$/"
    ]
  },
  "github-actions": {
    "managerFilePatterns": [
      "/^\\.github/workflows/[^/]+\\.ya?ml$/"
    ]
  }
}
