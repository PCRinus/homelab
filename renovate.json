{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "every monday"
  ],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "groupName": "Docker images",
      "automerge": false
    },
    {
      "matchDatasources": ["terraform-provider"],
      "groupName": "Terraform providers",
      "automerge": false
    }
  ],
  "docker-compose": {
    "fileMatch": [".*/compose\\.yml$", ".*/compose\\.yaml$"]
  },
  "terraform": {
    "fileMatch": ["\\.tf$"]
  }
}
